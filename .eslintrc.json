{
  "extends": "eslint:recommended",
  "plugins": [
    "import"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "func-names": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "vars-on-top": "off",
    "no-unused-vars": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ]
  }
}